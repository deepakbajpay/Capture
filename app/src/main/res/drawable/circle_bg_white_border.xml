<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2" android:useLevel="false">

            <solid android:color="@color/colorPrimary" />

            <size android:width="@dimen/dimen_32dp" android:height="@dimen/dimen_32dp" />

            <stroke android:width="1dp" android:color="@color/white" />

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:innerRadius="0dp" android:shape="oval" android:thicknessRatio="2" android:useLevel="false">

            <solid android:color="@color/bg_gray" />

            <size android:width="@dimen/dimen_32dp" android:height="@dimen/dimen_32dp" />

            <stroke android:width="1dp" android:color="@color/white" />

        </shape>
    </item>
</selector>